algoritmo somarDoisValores
    real x,y
    início
        escreva ("Entre com o 1º valor:")
        leia (x)
        escreva ("Entre com o 2º valor:")
        leia (y)
        escreva ("A soma é " + somaDoisValores (x, y))
    fim 

real somaDoisValores (real a, real b)
    inicio
        retorne a+b
    fim

