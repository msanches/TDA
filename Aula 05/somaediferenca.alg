algoritmo soma_e_diferenca
    inteiro a, b, soma, diferenca
    início
        escreva("Digite o primeiro número:")
        leia(a)
        escreva("Digite o segundo número:")
        leia(b)
        soma = a + b
        diferenca = a - b
        escreva("A soma dos números é: ", soma)
        escreva("A diferença dos números é: " , diferenca)
    fim