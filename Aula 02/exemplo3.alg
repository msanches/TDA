algoritmo media_quatro_valores
	início
	  real: n1, n2, n3, n4, media
	  escreva ("Digite o 1º valor: ")
	  leia (n1)
	  escreva ("Digite o 2º valor: ")
	  leia (n2)
	  escreva ("Digite o 3º valor: ")
	  leia (n3)
	  escreva ("Digite o 4º valor: ")
	  leia (n4)  
	  media = (n1+n2+n3+n4)/4
	  escreva ("A média dos valores é: " + media)
	fim 

